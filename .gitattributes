# Automatic text normalization
* text=auto

# Source code - always LF
*.ts text eol=lf
*.js text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.less text eol=lf
*.xml text eol=lf
*.sql text eol=lf

# Config files
.editorconfig text eol=lf
.gitattributes text eol=lf
.gitignore text eol=lf
*.config text eol=lf
*.conf text eol=lf
*.toml text eol=lf
*.ini text eol=lf

# Package files
package.json text eol=lf
package-lock.json text eol=lf
npm-shrinkwrap.json text eol=lf
yarn.lock text eol=lf

# Documentation
*.rst text eol=lf
*.tex text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf
*.ps1 text eol=lf
*.bat text eol=crlf

# Binary files - no processing
*.png binary
